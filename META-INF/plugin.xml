<!--If plugin is not showing up launch intellij and go into plugin settings and enable the plugin-->
<idea-plugin version="2">
    <id>com.atsebak.ui5</id>
    <name>OpenUI5</name>
    <version>1.2</version>
    <vendor email="ahmad@atsebak.com" url="http://www.atsebak.com">At Sebak</vendor>

    <description><![CDATA[
    This is an OpenUI5 Plugin for Intellij Platforms
    ]]></description>

    <change-notes><![CDATA[
            Fixed some depreciated framework apis and o/s dependencies.
    ]]>
    </change-notes>
    <idea-version since-build="131"/>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceInterface="com.atsebak.ui5.config.UI5Settings" serviceImplementation="com.atsebak.ui5.config.UI5Settings"/>
        <directoryProjectGenerator implementation="com.atsebak.ui5.projectbuilder.UI5ProjectTemplateGenerator"/>
        <projectTemplatesFactory implementation="com.atsebak.ui5.projectbuilder.UI5TemplatesFactory"/>
        <errorHandler implementation="com.intellij.diagnostic.ITNReporter"/>
        <documentationProvider implementation="com.atsebak.ui5.providers.UI5DocumentationProvider"/>
        <programRunner implementation="com.atsebak.ui5.runner.UI5Runner"/>
        <configurationType implementation="com.atsebak.ui5.runner.UI5RunConfigurationType"/>
    </extensions>

    <project-components>
    </project-components>
    <actions>
        <action id="NewUI5ViewFile" class="com.atsebak.ui5.filebuilder.UI5CreateFileAction"
                text="UI5"
                description="Create a new UI5 Component">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFromTemplate"/>
        </action>
        <action id="UI5Search" class="com.atsebak.ui5.actions.UI5ApiSearch"
                text="UI5 Api Search"
                description="Search code on the openUI5 api" icon="/Icons/ui5.png">
            <keyboard-shortcut
                    keymap="$default"
                    first-keystroke="shift ctrl G"/>
            <add-to-group group-id="EditorPopupMenu" anchor="after"
                          relative-to-action="FindUsages"/>
        </action>
    </actions>
</idea-plugin>